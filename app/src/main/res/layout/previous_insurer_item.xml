<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/base_margin_double">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/insurer_logo_width"
        android:layout_height="@dimen/insurer_logo_width"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/base_margin_double"
        android:contentDescription="@null"
        tools:src="@drawable/ic_claims" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAppearance="?textAppearanceBody1"
        tools:text="Sweden" />

</LinearLayout>