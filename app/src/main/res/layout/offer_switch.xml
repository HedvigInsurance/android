<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/base_margin_double">

    <TextView
        android:id="@+id/currentInsurerLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/offer_screen.switcher_current_insurer_label"
        android:textAppearance="?textAppearanceSubtitle1"
        app:layout_constraintEnd_toStartOf="@id/currentInsurer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentInsurer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/currentInsurerLabel"
        app:layout_constraintTop_toTopOf="@id/currentInsurerLabel"
        tools:text="Annat Försäkringsbolag" />

</androidx.constraintlayout.widget.ConstraintLayout>