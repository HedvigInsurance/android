<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/campaignInformationContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/base_margin_double"
    android:layout_marginTop="@dimen/base_margin_quadruple"
    android:layout_marginEnd="@dimen/base_margin_double"
    android:orientation="vertical">

    <TextView
        android:id="@+id/campaignInformationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceSubtitle1"
        tools:text="Aktuell kampanj" />

    <TextView
        android:id="@+id/campaignInformationLabelOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_double"
        android:textAppearance="?textAppearanceBody2"
        tools:text="FrÃ¥n" />

    <TextView
        android:id="@+id/campaignInformationFieldOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        android:textAppearance="?textAppearanceSubtitle1"
        tools:text="Partner XYZ" />

    <TextView
        android:id="@+id/lastFreeDayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_quadruple"
        android:text="@string/PAYMENTS_CAMPAIGN_LFD"
        android:textAppearance="?textAppearanceBody2"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/lastFreeDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        android:textAppearance="?textAppearanceSubtitle1"
        android:visibility="gone"
        tools:text="2019-06-28"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/willUpdateWhenStartDateIsSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_quadruple"
        android:text="@string/PAYMENTS_NO_STARTDATE_HELP_MESSAGE"
        android:textAppearance="?textAppearanceCaption"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
