<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:minHeight="@dimen/peril_bottom_sheet_exception_item_size"
    android:layout_marginTop="@dimen/base_margin_half"
    android:paddingHorizontal="@dimen/base_margin_double"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/peril_bottom_sheet_exception_icon_size"
        android:layout_height="@dimen/peril_bottom_sheet_exception_icon_size"
        android:layout_marginEnd="@dimen/base_margin_double"
        android:contentDescription="@null"
        tools:srcCompat="@drawable/ic_checkmark_in_circle" />

    <TextView
        android:id="@+id/text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="?textAppearanceSubtitle1"
        tools:text="This is covered" />
</LinearLayout>
