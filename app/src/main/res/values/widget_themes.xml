<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Hedvig.Theme.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="Hedvig.Theme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?colorPrimary</item>
    </style>

    <style name="Hedvig.Theme.Toolbar.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Hedvig.Theme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Hedvig.Theme.BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="materialButtonStyle">@style/Hedvig.Button</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Hedvig.Theme.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">
            @style/ThemeOverlay.Hedvig.ShapeAppearance.BottomSheetDialog
        </item>
    </style>

    <style name="Hedvig.Theme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Hedvig.TextInputLayout.FilledBox
        </item>
    </style>

    <style name="Hedvig.Theme.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Hedvig.TextInputLayout.OutlinedBox
        </item>
    </style>

    <style name="ThemeOverlay.Hedvig.TextInputLayout.OutlinedBox" parent="">
        <item name="editTextStyle">@style/Hedvig.Theme.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="Hedvig.Theme.TextInputEditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Hedvig.Theme.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.Hedvig.TextInputLayout.FilledBox
        </item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColorHint">?android:textColorPrimary</item>
        <item name="hintTextColor">?android:textColorPrimary</item>
        <item name="helperTextTextColor">?android:textColorPrimary</item>
    </style>

    <style name="ThemeOverlay.Hedvig.TextInputLayout.FilledBox" parent="">
        <item name="editTextStyle">@style/Hedvig.Theme.TextInputEditText.FilledBox</item>
    </style>

    <style name="Hedvig.Theme.TextInputEditText.FilledBox" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.Hedvig.TextInputEditText" parent="">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="ThemeOverlay.Hedvig.SurfaceOnSurface" parent="">
        <item name="colorSurface">@color/colorSurfaceOnSurface</item>
    </style>

    <style name="ThemeOverlay.Hedvig.InfoCard" parent="">
        <item name="colorSurface">@color/colorInfoCardSurface</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/color_divider</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ThemeOverlay.Hedvig.PSA" parent="">
        <item name="android:textColorSecondary">@color/color_hedvig_black_67</item>
        <item name="colorPrimary">@color/hedvig_black</item>
        <item name="android:colorBackground">?colorWarning</item>
    </style>

    <style name="ThemeOverlay.Hedvig.WarningCard" parent="">
        <item name="colorSurface">?colorWarning</item>
        <item name="colorPrimary">@color/hedvig_black</item>
        <item name="android:textColorPrimary">@color/text_color_primary_light</item>
        <item name="android:textColorSecondary">@color/hedvig_black</item>
        <item name="colorOnSurface">?colorPrimary</item>
        <item name="android:textColorLink">?android:textColorSecondary</item>
    </style>

    <style name="ThemeOverlay.Hedvig.RenewalCard" parent="">
        <item name="colorSurface">@color/colorInfoCardSurface</item>
        <item name="colorOnSurface">?colorPrimary</item>
    </style>

    <style name="ThemeOverlay.Hedvig.InsuranceCard" parent="">
        <item name="colorSurface">@color/hedvig_white</item>
        <item name="colorOnSurface">?colorPrimary</item>
    </style>

    <style name="ThemeOverlay.Hedvig.InsuranceCard.StatusPill" parent="">
        <item name="android:textColorTertiary">@color/text_color_primary_light</item>
    </style>

    <style name="ThemeOverlay.Hedvig.InsuranceCard.Discount" parent="">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="ThemeOverlay.Hedvig.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">?textAppearanceBody1</item>
    </style>

    <style name="ThemeOverlay.Hedvig.Toolbar.ErrorAction" parent="">
        <item name="actionMenuTextColor">?colorError</item>
    </style>

    <style name="ThemeOverlay.Hedvig.LoggedInCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/logged_in_card_elevation</item>
        <item name="cardBackgroundColor">?colorSurface</item>
    </style>

    <style name="ThemeOverlay.Hedvig.ReferralsContainer" parent="">
        <item name="android:colorBackground">?colorSurface</item>
    </style>

    <style name="ThemeOverlay.Hedvig.Embark.Chat.Hedvig" parent="">
        <item name="android:background">@drawable/embark_chat_bubble_hedvig_background</item>
        <item name="android:paddingStart">@dimen/base_margin_double</item>
        <item name="android:paddingEnd">@dimen/base_margin_double</item>
        <item name="android:paddingTop">@dimen/base_margin_and_a_half</item>
        <item name="android:paddingBottom">@dimen/base_margin_and_a_half</item>
    </style>

    <style name="ThemeOverlay.Hedvig.Embark.Chat.Self" parent="">
        <item name="android:textColorPrimary">@color/hedvig_black</item>
        <item name="colorSurface">@color/separator_light</item>
    </style>

    <style name="ThemeOverlay.Hedvig.Card.Outlined.Unfilled" parent="">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/color_divider</item>
        <item name="strokeWidth">1dp</item>
        <item name="colorSurface">?android:colorBackground</item>
    </style>

    <style name="Hedvig.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarHeaderLayout">@style/Hedvig.CalendarHeader</item>
        <item name="materialCalendarHeaderSelection">@style/Hedvig.HeaderSelection</item>
        <item name="materialCalendarHeaderToggleButton">@style/HeaderToggleButton1</item>
    </style>

    <style name="HeaderToggleButton1" parent="@style/Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:visibility">gone</item>
    </style>

    <style name="Hedvig.CalendarHeader" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">?colorOnPrimary</item>
    </style>

    <style name="Hedvig.HeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">?colorPrimary</item>
    </style>

</resources>
