<resources>

    <style name="Hedvig.Theme" parent="Hedvig.Theme.V23" />

    <style name="Hedvig.Theme.KeyGear">
        <item name="android:navigationBarColor">@color/translucent_background</item>
    </style>

    <style name="Hedvig.Theme.LoggedIn">
        <item name="android:navigationBarColor">#01FF0000</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="Hedvig.Theme.Chat">
        <item name="android:navigationBarColor">@color/color_background_95</item>
    </style>

    <style name="Hedvig.Theme.KeyGear.ItemDetail">
        <item name="colorControlNormal">?colorOnPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Hedvig.Theme.Offer.V23" parent="Hedvig.Theme">
        <item name="android:windowBackground">@color/hedvig_black</item>
        <item name="android:statusBarColor">@color/hedvig_black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Hedvig.Theme.Offer" parent="Hedvig.Theme.Offer.V23" />

    <style name="Hedvig.Theme.Splash">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="FullScreenDialog" parent="Hedvig.Theme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="WelcomeDialogAnimation">
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="WhatsNewDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_fragment_background</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorSurface</item>
    </style>

    <style name="NoTitleBottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="bottomSheetStyle">@style/NoTitleBottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorSurface</item>
    </style>

    <style name="PerilBottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="bottomSheetStyle">@style/PerilBottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorSurface</item>
    </style>

    <style name="PerilBottomSheet">
        <item name="android:background">@drawable/peril_bottom_sheet_background</item>
    </style>

    <style name="NoTitleBottomSheet">
        <item name="android:background">@drawable/bottom_sheet_dialog_no_title_fragment_background
        </item>
    </style>

    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="TransparentDialog" parent="TransparentDialog.V23" />

    <style name="TransparentDialog.V23" parent="Hedvig.Theme">
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>

        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Adyen Compatibility fixes -->
    <style name="AdyenCheckout.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?colorPrimary</item>
        <item name="hintTextAppearance">@style/AdyenCheckout.HintTextStyle</item>
        <item name="hintTextColor">?colorPrimary</item>
        <item name="android:minHeight">@dimen/input_layout_height</item>
    </style>

    <style name="AdyenCheckout.BottomSheet" parent="BottomSheetDialogTheme">
        <item name="android:background">@drawable/adyen_bottom_sheet_background</item>
    </style>

    <style name="AdyenCheckout.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AdyenCheckout.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pay_button_height</item>
        <item name="android:layout_marginBottom">@dimen/standard_half_margin</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:theme">@style/AdyenCheckout.PrimaryFlatButton</item>
    </style>

</resources>
