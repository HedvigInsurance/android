<resources>

    <style name="Hedvig.Theme" parent="Hedvig.Theme.V21" />

    <!-- REASON: Adyen Checkout is not yet compatible with Material Components 1.1.0 -->
    <style name="AdyenCheckout" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Hedvig.Theme.KeyGear">
        <item name="android:navigationBarColor">@color/translucent_background</item>
    </style>

    <style name="Hedvig.Theme.KeyGear.ItemDetail">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Hedvig.Theme.Marketing">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Hedvig.Theme.Offer" />

    <style name="Hedvig.Theme.Splash">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="FullScreenDialog" parent="Hedvig.Theme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="WelcomeDialogAnimation">
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="WhatsNewDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--  TODO: Remove these once we've removed the only screen using it -->
    <style name="ProfileFieldLabel">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProfileField" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/ProfileFieldLabel</item>
        <item name="colorControlActivated">?colorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--
    <style name="AppTheme.MenuItem">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionMenuTextColor">?colorSecondary</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.MenuItem</item>
    </style>
    -->

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_fragment_background</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorSurface</item>
    </style>

    <style name="NoTitleBottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="bottomSheetStyle">@style/NoTitleBottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorSurface</item>
    </style>

    <style name="PerilBottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="bottomSheetStyle">@style/PerilBottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorSurface</item>
    </style>

    <style name="PerilBottomSheet">
        <item name="android:background">@drawable/peril_bottom_sheet_background</item>
    </style>

    <style name="NoTitleBottomSheet">
        <item name="android:background">@drawable/bottom_sheet_dialog_no_title_fragment_background
        </item>
    </style>

    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="TransparentDialog" parent="TransparentDialog.V21" />

    <style name="TransparentDialog.V21" parent="Hedvig.Theme">
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>

        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AdyenCheckout.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?colorPrimary</item>
        <item name="hintTextAppearance">@style/AdyenCheckout.HintTextStyle</item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="android:minHeight">@dimen/input_layout_height</item>
    </style>

</resources>
