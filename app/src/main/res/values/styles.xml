<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Hedvig.Theme" parent="Hedvig.Theme.V23" />

    <style name="Hedvig.Theme.Marketing.V23" parent="Hedvig.Theme">
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <style name="Hedvig.Theme.Marketing" parent="Hedvig.Theme.Marketing.V23" />

    <style name="Hedvig.Theme.KeyGear">
        <item name="android:navigationBarColor">@color/translucent_background</item>
    </style>

    <style name="Hedvig.Theme.LoggedIn">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="Hedvig.Theme.Chat">
        <item name="android:navigationBarColor">@color/color_background_95</item>
    </style>

    <style name="Hedvig.Theme.KeyGear.ItemDetail">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Hedvig.Theme.Offer.V23" parent="Hedvig.Theme">
        <item name="android:windowBackground">@color/hedvig_black</item>
        <item name="android:statusBarColor">@color/hedvig_black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Hedvig.Theme.Offer" parent="Hedvig.Theme.Offer.V23" />

    <style name="Hedvig.Theme.Splash.V23" parent="Hedvig.Theme">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:navigationBarColor">@color/hedvig_black</item>
    </style>

    <style name="Hedvig.Theme.Splash" parent="Hedvig.Theme.Splash.V23" />

    <style name="FullScreenDialog" parent="Hedvig.Theme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="WelcomeDialogAnimation">
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogSlideInSlideOut">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_fragment_background</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorSurface</item>
    </style>

    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="TransparentDialog" parent="TransparentDialog.V23" />

    <style name="TransparentDialog.V23" parent="Hedvig.Theme">
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>

        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ToolbarIcon">
        <item name="android:layout_height">@dimen/chat_top_bar_button_size</item>
        <item name="android:layout_width">@dimen/chat_top_bar_button_size</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/base_margin_half</item>
        <item name="tint">@color/icon_tint</item>
    </style>

    <style name="ToolbarIcon.Start">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginStart">@dimen/base_margin</item>
    </style>

    <style name="ToolbarIcon.End">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/base_margin</item>
    </style>

    <!-- Adyen Compatibility fixes -->
    <style name="AdyenCheckout.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?colorPrimary</item>
        <item name="hintTextAppearance">@style/AdyenCheckout.HintTextStyle</item>
        <item name="hintTextColor">?colorPrimary</item>
        <item name="android:minHeight">@dimen/input_layout_height</item>
    </style>

    <style name="AdyenCheckout.BottomSheet" parent="BottomSheetDialogTheme">
        <item name="android:background">@drawable/adyen_bottom_sheet_background</item>
    </style>

    <style name="AdyenCheckout.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AdyenCheckout.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pay_button_height</item>
        <item name="android:layout_marginBottom">@dimen/standard_half_margin</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:theme">@style/AdyenCheckout.PrimaryFlatButton</item>
    </style>

    <style name="Hedvig.Theme.EmbarkList">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:layout_marginStart">@dimen/base_margin_double</item>
        <item name="android:layout_marginEnd">@dimen/base_margin_double</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">12dp</item>
    </style>
</resources>
