<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Hedvig.Theme.V23" />

    <style name="Hedvig.Theme.V23" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/hedvig_white</item>
        <item name="colorButton">@color/colorButton</item>
        <item name="colorPlaceholder">@color/colorPlaceholder</item>
        <item name="colorWarning">@color/colorWarning</item>
        <item name="textColorLink">@color/textColorLink</item>
        <item name="textColorLargeButton">@color/textColorLargeButton</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:textColorTertiary">@color/textColorThird</item>
        <item name="fontFamily">@font/favorit_book</item>
        <item name="android:fontFamily">@font/favorit_book</item>

        <item name="android:windowActivityTransitions">true</item>

        <item name="shapeAppearanceLargeComponent">
            @style/Hedvig.ShapeAppearance.LargeComponent
        </item>

        <item name="shapeAppearanceMediumComponent">
            @style/Hedvig.ShapeAppearance.MediumComponent
        </item>

        <item name="radioButtonStyle">@style/Hedvig.RadioButton</item>

        <!-- Default button -->
        <item name="materialButtonStyle">@style/Hedvig.Button</item>
        <item name="textAppearanceButton">@style/Hedvig.TextAppearance.Button</item>

        <!-- Button Variants -->
        <item name="materialButtonContainedLargeStyle">@style/Hedvig.Button.Large</item>
        <item name="materialButtonOutlinedLargeStyle">@style/Hedvig.Button.Outlined.Large</item>
        <item name="materialButtonOutlinedStyle">@style/Hedvig.Button.Outlined</item>
        <item name="materialButtonTextStyle">@style/Hedvig.Button.Text</item>

        <!-- Material Typography variants -->
        <item name="textAppearanceHeadline3">@style/Hedvig.TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/Hedvig.TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/Hedvig.TextAppearance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/Hedvig.TextAppearance.Headline6</item>

        <item name="textAppearanceSubtitle1">@style/Hedvig.TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Hedvig.TextAppearance.Subtitle2</item>

        <item name="textAppearanceBody1">@style/Hedvig.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/Hedvig.TextAppearance.Body2</item>

        <item name="textAppearanceCaption">@style/Hedvig.TextAppearance.Caption</item>

        <item name="textAppearanceOverline">@style/Hedvig.TextAppearance.Overline</item>

        <!-- Widget styles -->
        <item name="appBarLayoutStyle">@style/Hedvig.Theme.AppBarLayout</item>
        <item name="toolbarStyle">@style/Hedvig.Theme.Toolbar</item>
        <item name="bottomSheetDialogTheme">@style/Hedvig.Theme.BottomSheetDialog</item>
        <item name="textInputStyle">@style/Hedvig.Theme.TextInputLayout</item>

        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="actionButtonStyle">@style/Hedvig.Theme.Toolbar.ActionButton</item>
        <item name="actionMenuTextColor">@color/hedvig_text_button_state</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Hedvig.Dialog.Alert</item>
        <item name="android:windowLightStatusBar">?isLightTheme</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="materialCalendarTheme">@style/Hedvig.DatePicker</item>
    </style>

    <attr name="materialButtonContainedLargeStyle" format="reference" />
    <attr name="materialButtonOutlinedLargeStyle" format="reference" />
    <attr name="materialButtonTextStyle" format="reference" />
    <attr name="colorButton" format="reference" />
    <attr name="textColorLink" format="reference" />
    <attr name="textColorLargeButton" format="reference" />
    <attr name="colorPlaceholder" format="reference" />
    <attr name="colorWarning" format="reference" />

    <style name="Hedvig.Theme.Widgets.Chat.Hedvig" parent="Hedvig.Theme">
        <item name="colorSurface">@color/colorChatHedvigBackground</item>
    </style>

    <style name="Hedvig.Theme.Widgets.Chat.User" parent="Hedvig.Theme">
        <item name="colorSurface">@color/colorChatUserBackground</item>
    </style>

    <style name="Hedvig.Theme.Widgets.Chat.Input" parent="Hedvig.Theme">
        <item name="colorSurface">@color/colorChatInputButton</item>
    </style>

    <style name="Hedvig.Theme.Settings" parent="Hedvig.Theme">
        <item name="android:textColorSecondary">@color/colorPrimaryVariant</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="ThemeOverlay.Hedvig.MarketingActivity" parent="">
        <item name="colorPrimary">@color/hedvig_white</item>
        <item name="colorButton">@color/hedvig_white</item>
        <item name="colorOnPrimary">@color/hedvig_black</item>
        <item name="colorOnSurface">@color/hedvig_white</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
