<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="@dimen/premium_box_campaign_header_height">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="@dimen/background_rounded_corner_radius"
                android:topRightRadius="@dimen/background_rounded_corner_radius" />
            <solid android:color="?colorSurface" />
        </shape>
    </item>
    <item android:top="@dimen/premium_box_campaign_header_height">
        <shape android:shape="rectangle">
            <solid android:color="?colorSurface" />
            <corners
                android:bottomLeftRadius="@dimen/background_rounded_corner_radius"
                android:bottomRightRadius="@dimen/background_rounded_corner_radius" />
        </shape>
    </item>
    <item android:height="1dp" android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="2dp" />
            <solid android:color="@color/color_divider" />
        </shape>
    </item>
</layer-list>
